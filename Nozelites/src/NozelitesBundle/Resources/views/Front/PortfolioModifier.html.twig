                                <div class="row">



                                    <div class="col-xl-4">
                                        <div class="submit-field">
                                            <h5>Titre</h5>
                                            {{ form_widget(form.titre , {'attr' : {'class' : 'with-border'}}) }}
                                        </div>
                                        {{ form_errors(form.lien) }}
                                    </div>

                                    <div class="col-xl-4">
                                        <div class="submit-field">
                                            <h5>Lien github</h5>
                                            {{ form_widget(form.lien , {'attr' : {'class' : 'with-border'}}) }}

