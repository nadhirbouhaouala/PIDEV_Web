{% extends '@Nozelites/basefrontmembre.html.twig' %}
{% block titre %}{{ parent() }} - MGroupes {% endblock %}
{% block content %}
    <div id="titlebar" class="white margin-bottom-30">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Top</h2>
                    <span>Evenements</span>

                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs" class="dark">

                    </nav>
                </div>
            </div>
        </div>
    </div>
