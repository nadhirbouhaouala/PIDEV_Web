                        {% else %}
                        <a href="{{ path('nozelites_Evenementpagefront',{'id':de.idE})}}" class="blog-compact-item-container">
                            <div class="blog-compact-item">
                                {% set imageur = de.image|split('/')  %}
                                {%  set imageur = imageur[imageur|length-1] %}
                                {% set imageurl = "front/images/"~imageur %}

                                <img src="{{ asset(imageurl) }}">

                                <span class="blog-item-tag">Top 1</span>
                                <div class="blog-compact-item-content">
                                    <ul class="blog-post-tags">
                                        <li>{{ de.date|date('d/m/Y') }}</li>

                                    </ul>
                                    <ul class="blog-post-tags">
                                        <li>{{ de.nbparticipant }} participants</li>
                                    </ul>
                                    <h3>{{ de.nom }}</h3>
